<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#666666"
            android:text="打印机IP地址" />

        <EditText
            android:id="@+id/connect_ip"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/radius_stroke_bg"
            android:hint="192.168.223.1"
            android:text="192.168.223.1"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#666666"
            android:text="打印机端口号" />

        <EditText
            android:id="@+id/connect_port"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/radius_stroke_bg"
            android:hint="9100"
            android:text="9100"
            android:inputType="number"
            android:paddingLeft="15dp" />

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"></View>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="连接打印机"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"></View>


        <TextView
            android:id="@+id/confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="打印"
            android:textColor="#22D6ED"
            android:gravity="center"
            android:textSize="15sp"/>


    </LinearLayout>
</LinearLayout>
